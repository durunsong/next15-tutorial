{
  "name": "next-neon-base",
  "version": "1.0.1",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "prisma generate && next build",
    "start": "next start",
    "preview": "next build && next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "pre-commit": "lint-staged",
    "pre-deploy": "pnpm lint && pnpm type-check && pnpm format && pnpm build",
    "pre-commit-check": "pnpm lint:fix && pnpm type-check && pnpm format",
    "pre-push-check": "pnpm lint && pnpm type-check && pnpm format:check && pnpm build",
    "quick-check": "pnpm lint && pnpm type-check",
    "full-check": "pnpm lint && pnpm type-check && pnpm format:check && pnpm build && pnpm test --run --passWithNoTests",
    "commit-ready": "pnpm pre-commit-check && echo '✅ Ready to commit!'",
    "push-ready": "pnpm pre-push-check && echo '✅ Ready to push!'",
    "commit": "cz",
    "commit:retry": "cz --retry",
    "setup-hooks": "node setup-git-hooks.js",
    "postinstall": "prisma generate",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:pull": "prisma db pull",
    "db:migrate": "prisma migrate dev",
    "db:migrate:prod": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "db:seed": "prisma db seed",
    "db:sync": "prisma db pull && prisma generate",
    "db:dev-push": "prisma db push && prisma generate",
    "db:reset": "prisma migrate reset --force",
    "clean": "rimraf .next",
    "clean:all": "rimraf .next node_modules pnpm-lock.yaml && pnpm install",
    "clean:cache": "rimraf .next/cache",
    "prepare": "husky",
    "ci": "pnpm lint && pnpm type-check && pnpm format:check",
    "validate": "pnpm ci && pnpm build",
    "analyze": "cross-env ANALYZE=true pnpm build",
    "analyze:server": "cross-env BUNDLE_ANALYZE=server pnpm build",
    "analyze:browser": "cross-env BUNDLE_ANALYZE=browser pnpm build"
  },
  "dependencies": {
    "@ant-design/icons": "^6.0.0",
    "@ant-design/v5-patch-for-react-19": "^1.0.3",
    "@monaco-editor/react": "^4.7.0",
    "@prisma/client": "^6.9.0",
    "@types/ali-oss": "^6.16.11",
    "@types/prismjs": "^1.26.5",
    "@upstash/redis": "^1.35.0",
    "ali-oss": "^6.23.0",
    "antd": "^5.26.1",
    "bcryptjs": "^3.0.2",
    "echarts": "^5.6.0",
    "framer-motion": "^12.23.12",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.539.0",
    "monaco-editor": "^0.52.2",
    "next": "15.3.3",
    "prisma": "^6.9.0",
    "prismjs": "^1.30.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "shiki": "^3.9.2",
    "zod": "^4.0.17",
    "zustand": "^5.0.5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css,scss,yaml,yml}": [
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "tsc --noEmit"
    ]
  },
  "engines": {
    "node": ">=18.17.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@9.0.0",
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@next/bundle-analyzer": "^15.5.2",
    "@next/eslint-plugin-next": "^15.3.4",
    "@tailwindcss/postcss": "^4",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/bcryptjs": "^3.0.0",
    "@types/js-cookie": "^3.0.6",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "commitizen": "^4.3.0",
    "cross-env": "^10.0.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9",
    "eslint-config-next": "15.3.3",
    "eslint-plugin-react-hooks": "^5.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "tailwindcss": "^4",
    "tsx": "^4.20.3",
    "typescript": "^5",
    "webpack-bundle-analyzer": "^4.10.2"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
