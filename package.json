{
  "name": "next15-tutorial",
  "version": "1.0.1",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "prisma generate && next build --turbopack",
    "start": "next start",
    "preview": "next build && next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "code-quality": "pnpm lint && pnpm type-check && pnpm format:check",
    "code-quality:fix": "pnpm lint:fix && pnpm type-check && pnpm format",
    "code-quality:check": "pnpm lint && pnpm type-check && pnpm format:check",
    "pre-commit": "lint-staged",
    "pre-deploy": "pnpm code-quality && pnpm build",
    "pre-commit-check": "pnpm code-quality:fix",
    "pre-push-check": "pnpm code-quality:check",
    "pre-push-check-with-build": "pnpm code-quality:check && pnpm build",
    "quick-check": "pnpm lint && pnpm type-check",
    "full-check": "pnpm lint && pnpm type-check && pnpm format:check && pnpm build && pnpm test --run --passWithNoTests",
    "commit-ready": "pnpm pre-commit-check && echo '✅ Ready to commit!'",
    "push-ready": "pnpm pre-push-check && echo '✅ Ready to push!'",
    "push-ready-with-build": "pnpm pre-push-check-with-build && echo '✅ Ready to push with build verification!'",
    "commit": "cz",
    "commit:retry": "cz --retry",
    "setup-hooks": "node setup-git-hooks.js",
    "postinstall": "prisma generate",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:pull": "prisma db pull",
    "db:migrate": "prisma migrate dev",
    "db:migrate:prod": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "db:seed": "prisma db seed",
    "db:sync": "prisma db pull && prisma generate",
    "db:dev-push": "prisma db push && prisma generate",
    "db:reset": "prisma migrate reset --force",
    "clean": "rimraf .next",
    "clean:all": "rimraf .next node_modules pnpm-lock.yaml && pnpm install",
    "clean:cache": "rimraf .next/cache",
    "prepare": "husky",
    "ci": "pnpm lint && pnpm type-check && pnpm format:check",
    "validate": "pnpm ci && pnpm build",
    "analyze": "cross-env ANALYZE=true pnpm build",
    "analyze:server": "cross-env BUNDLE_ANALYZE=server pnpm build",
    "analyze:browser": "cross-env BUNDLE_ANALYZE=browser pnpm build",
    "test": "echo \"暂无测试\" && exit 0",
    "test:watch": "echo \"暂无测试\" && exit 0",
    "health-check": "pnpm audit --fix && echo \"📦 检查过时的包...\" && (pnpm outdated || echo \"✅ 依赖检查完成\")",
    "update-deps": "pnpm update --latest",
    "security-audit": "pnpm audit --fix",
    "perf-test": "pnpm build && echo \"构建完成，请检查包大小\"",
    "dev:https": "cross-env HTTPS=true pnpm dev",
    "dev:turbo": "cross-env TURBOPACK=1 pnpm dev",
    "export": "pnpm build && next export",
    "start:prod": "cross-env NODE_ENV=production pnpm start"
  },
  "dependencies": {
    "@ant-design/icons": "^6.0.1",
    "@monaco-editor/react": "^4.7.0",
    "@prisma/client": "^6.16.0",
    "@types/ali-oss": "^6.16.11",
    "@types/prismjs": "^1.26.5",
    "@upstash/redis": "^1.35.3",
    "ali-oss": "^6.23.0",
    "antd": "^5.27.3",
    "bcryptjs": "^3.0.2",
    "critters": "^0.0.25",
    "echarts": "^6.0.0",
    "framer-motion": "^12.23.12",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.544.0",
    "monaco-editor": "^0.53.0",
    "next": "^15.5.3",
    "prisma": "^6.16.0",
    "prismjs": "^1.30.0",
    "proxy-agent": "5",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "shiki": "^3.12.2",
    "zod": "^4.1.7",
    "zustand": "^5.0.8"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css,scss,yaml,yml}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.17.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@9.0.0",
  "devDependencies": {
    "@ant-design/v5-patch-for-react-19": "^1.0.3",
    "@eslint/eslintrc": "^3.3.1",
    "@next/bundle-analyzer": "^15.5.3",
    "@next/eslint-plugin-next": "^15.5.3",
    "@tailwindcss/postcss": "^4.1.13",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/bcryptjs": "^3.0.0",
    "@types/js-cookie": "^3.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.3.1",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "babel-plugin-react-compiler": "19.1.0-rc.3",
    "commitizen": "^4.3.1",
    "cross-env": "^10.0.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.35.0",
    "eslint-config-next": "15.5.3",
    "eslint-plugin-react-hooks": "^5.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "tailwindcss": "^4.1.13",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "webpack-bundle-analyzer": "^4.10.2"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "pnpm": {
    "overrides": {
      "tmp@<=0.2.3": ">=0.2.4"
    }
  }
}
