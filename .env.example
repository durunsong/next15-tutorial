# 数据库配置
DATABASE_URL="postgresql://username:password@localhost:5432/nextjs_tutorial"

# Redis 配置 (Upstash)
UPSTASH_REDIS_REST_URL="https://your-redis-url.upstash.io"
UPSTASH_REDIS_REST_TOKEN="your-redis-token"

# JWT 密钥 (生产环境请使用复杂的随机字符串)
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"

# 阿里云 OSS 配置
ALI_OSS_REGION="oss-cn-hangzhou"
ALI_OSS_BUCKET="your-bucket-name"
ALI_OSS_ACCESS_KEY_ID="your-access-key-id"
ALI_OSS_ACCESS_KEY_SECRET="your-access-key-secret"

# 应用配置
APP_TITLE="Next.js 15 教程项目"
APP_DESCRIPTION="一个完整的Next.js 15全栈教程项目"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Tawk.to 客服配置
NEXT_PUBLIC_TAWKTO_WIDGET_ID="your-tawkto-widget-id"
NEXT_PUBLIC_TAWKTO_PROPERTY_ID="your-tawkto-property-id"

# 验证码配置
CAPTCHA_SECRET="your-captcha-secret-key"

# 邮件配置 (可选)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# 性能监控配置 (可选)
ENABLE_ANALYTICS="false"
ANALYTICS_ID=""

# 开发环境配置
NODE_ENV="development"
ENABLE_HTTPS="false"

# 错误监控 (可选 - Sentry 等)
SENTRY_DSN=""
SENTRY_ORG=""
SENTRY_PROJECT=""

# 限流配置
RATE_LIMIT_MAX="100"
RATE_LIMIT_WINDOW="900000"
